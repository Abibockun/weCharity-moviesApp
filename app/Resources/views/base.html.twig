<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="{% block meta_description %}{% endblock %}">
    <meta name="keywords" content="{% block meta_keywords %}{% endblock %}">
    <meta name="author" content="Mikalai Okun">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {% block stylesheets %}
        {% stylesheets
        'bower_components/bootstrap/dist/css/bootstrap.min.css'
        '@AppBundle/Resources/public/css/style.css'
        filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
</head>

<body>

<div id="main-wrapper">
    {% block navigation %}
        <nav class="navbar navbar-default navbar-fixed-top Nav-bg">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    {% block navigation_brand_link %}
                    <a class="navbar-brand" href="{{ path('app_movies') }}">Pop Movies</a>
                    {% endblock %}
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="{% if app.request.get('apiRequest') == 'popular' %}active{% endif %}">
                            <a href="{{ path('app_movies') }}?apiRequest=popular">Popular <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="{% if app.request.get('apiRequest') == 'top_rated' %}active{% endif %}">
                            <a href="{{ path('app_movies') }}?apiRequest=top_rated">Top Rated</a>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    {% endblock %}
    {% block body %}
    {% endblock %}
</div>


{% block footer_js %}
    {% javascripts
    'bower_components/jquery/dist/jquery.min.js'
    'bower_components/bootstrap/dist/js/bootstrap.min.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}

</body>
</html>